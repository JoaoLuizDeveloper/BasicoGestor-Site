@using QuestorSistemasAdmin.Models
@model IList<Contato>
@{
    ViewData["Title"] = "Contatos";
}

<div class="wrapper">
    <div class="row">
        <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading">
                    Listagem de Contatos (@Model.Count)
                    <span class="tools pull-right">
                        <a href="javascript:;" class="fa fa-chevron-down"></a>
                        <a href="javascript:;" class="fa fa-times"></a>
                    </span>
                </header>
                <div class="panel-body">
                    <div class="adv-table editable-table ">
                        <br />
                        <div class="space15"></div>
                        <table class="table table-striped table-hover table-bordered" id="editable-sample">
                            <thead>
                                <tr>
                                    <th>Nome</th>
                                    <th>Email</th>
                                    <th>Data</th>
                                    <th>Detalhes</th>
                                    <th>Deletar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Count() > 0)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr class="">
                                            <td>@item.Nome</td>
                                            <td>@item.Email</td>
                                            <td>@item.DataCadastro.ToString("dd/MM/yyyy")</td>
                                            <td><a href="@Url.Action("Detalhes", "Contato", new { id = item.Id })">Detalhes</a></td>
                                            <td><a class="delete" href="@Url.Action("Excluir", "Contato", new { id = item.Id})">Deletar</a></td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>