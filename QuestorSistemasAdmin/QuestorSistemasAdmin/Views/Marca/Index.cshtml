@using QuestorSistemasAdmin.Models
@model IList<Marca>
@{
    ViewData["Title"] = "Index";
}

<div class="wrapper">
    <div class="row">
        <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading">
                    Listagem de Marcas (@Model.Count)
                    <span class="tools pull-right">
                        <a href="javascript:;" class="fa fa-chevron-down"></a>
                        <a href="javascript:;" class="fa fa-times"></a>
                    </span>
                </header>
                <div class="panel-body">
                    <div class="adv-table editable-table ">
                        <div class="clearfix">
                            <div class="btn-group">
                                <a href="@Url.Action("Create", "Marca")">
                                    <button id="editable-sample_new" class="btn btn-primary">
                                        Cadastrar <i class="fa fa-plus"></i>
                                    </button>
                                </a>
                            </div>
                        </div>
                        <br />
                        <div class="space15"></div>
                        <table class="table table-striped table-hover table-bordered" id="editable-sample">
                            <thead>
                                <tr>
                                    <th>Marca</th>
                                    <th>Data</th>
                                    <th>Detalhes</th>
                                    <th>Editar</th>
                                    <th>Deletar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Count() > 0)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr class="">
                                            <td>@item.MarcaVeiculo</td>
                                            <td>@item.DataCadastro.ToString("dd/MM/yyyy")</td>
                                            <td><a href="@Url.Action("Detalhes", "Marca", new { id = item.Id })">Detalhes</a></td>
                                            <td><a href="@Url.Action("Editar", "Marca", new { id = item.Id })">Editar</a></td>
                                            <td><a class="delete" href="@Url.Action("Excluir", "Marca", new { id = item.Id})">Deletar</a></td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>