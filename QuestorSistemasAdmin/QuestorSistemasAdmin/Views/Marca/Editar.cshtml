@using QuestorSistemasAdmin.Models
@model Marca
@{
    ViewData["Title"] = "Editar Marca";
}

<div class="wrapper">
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Editar Marca
                    <span class="tools pull-right">
                        <a class="fa fa-chevron-down" href="javascript:;"></a>
                        <a class="fa fa-times" href="javascript:;"></a>
                    </span>
                </header>
                <div class="panel-body">
                    <div class="form">
                        @using (Html.BeginForm("Editar", "Marca", FormMethod.Post, new { role = "form", enctype = "multipart/form-data", @class = "form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                <div class="col-sm-12">
                                    @Html.LabelFor(model => model.MarcaVeiculo)
                                    @Html.TextBoxFor(model => model.MarcaVeiculo, new { @class = "form-control", Maxlength = "300" })
                                    @Html.ValidationMessageFor(model => model.MarcaVeiculo)
                                    <br />
                                    <input type="hidden" name="Imagem" value="@Model.Imagem"/>
                                    @Html.LabelFor(model => model.Imagem)
                                    <input type="file" name="Imagem" title="Imagem" id="Imagem" />
                                    @Html.ValidationMessageFor(model => model.Imagem)
                                    <br />
                                    <button type="submit" class="btn btn-primary">Enviar</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

<script type="text/javascript" src="/js/ckeditor/ckeditor.js"></script>
<script type="text/javascript" src="/js/bootstrap-wysihtml5/wysihtml5-0.3.0.js"></script>
<script type="text/javascript" src="/js/bootstrap-wysihtml5/bootstrap-wysihtml5.js"></script>