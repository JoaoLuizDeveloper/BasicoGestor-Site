<style>
/*@@import url('https://fonts.googleapis.com/css?family=Rancho');*/

body {
  background:#3f4d51;
  font-family:'Rancho', cursive;
}
.box {
  transform:translate(-50%,-50%);
  position:absolute;
  top:50%;
  left:50%;
  width:150px;
  height:180px;
}
.load {
  position:absolute;
  bottom:-60px;
  left:50%;
  transform:translatex(-50%);
  color:#ccc;
  font-size:40px;
  text-shadow: 3px 3px 10px rgba(0,0,0,.5),
    -3px 3px 10px rgba(0,0,0,.5);
}
.cup {
  position:absolute;
  top:-7px;left:-7px;/*border*/
  width:100%;
  height:100%;
  border:7px solid #ccc;
  border-radius:5px 5px 25px 25px;
  box-shadow: 0 15px 35px rgba(0,0,0,.3);
}
.cup:after {
  content:'';
  position:absolute;
  z-index:10;
  width:calc(100% - 8px);
  height:calc(100% - 8px);
  border:4px solid #3f4d51;
  border-radius:0 0 18px 18px;
}
.handle{
  position:absolute;
  top:25px;
  height:100px;
  left:157px;
  width:50px;
  border:7px solid #ccc;
  border-left:none;
  border-radius:0px 35px 35px 0px;
  box-shadow: 3px 5px 5px rgba(0,0,0,.3),
    inset 0 5px 5px rgba(0,0,0,.3);
}
.coffee{
  position:absolute;
  bottom:0;
  left:0;
  width:100%;
  height:0%;
}
.coffee svg {
  position:absolute;
  top:-25px;
  left:0;
  width:300px;
}

/* The magic is here
*************************** */
.cup {
  overflow:hidden;
}
.coffee{
  background:#3E2723;
  animation:coffee 15s infinite;
}
.coffee svg{
  fill:#6F4E37;
  animation:svg 3s linear infinite alternate;
}
@@keyframes coffee {
  0% { height:0%; }
  50% { height:80%; }
}
@@keyframes svg {
  0% { left:0%;top:-25px; }
  25% { left:-50%;top:-15px; }
  50% { left:-100%;top:-25px; }
  75% { left:-50%;top:-15px; }
}
</style>

<div class="box" style="margin-top: 5px;">
    <div class="cup">
        <div class="coffee">
            <svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 1440 126" style="enable-background:new 0 0 1440 126;" xml:space="preserve">
                <path class="st0" d="M685.6,38.8C418.7-11.1,170.2,9.9,0,30v96h1440V30C1252.7,52.2,1010,99.4,685.6,38.8z" />
            </svg>
        </div>
    </div>
    <div class="handle"></div>
    <div class="load">Café</div>
</div>
