@using QuestorSistemasAdmin.Models
@model Modelo
@{
    ViewData["Title"] = "Cadastrar Modelo";
}

<div class="wrapper">
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Cadastrar Modelo
                    <span class="tools pull-right">
                        <a class="fa fa-chevron-down" href="javascript:;"></a>
                        <a class="fa fa-times" href="javascript:;"></a>
                    </span>
                </header>
                <div class="panel-body">
                    <div class="form">
                        @using (Html.BeginForm("Create", "Modelo", FormMethod.Post, new { role = "form", enctype = "multipart/form-data", @class = "form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                <div class="col-sm-12">
                                    <br />
                                    @Html.LabelFor(model => model.Marca)
                                    <select name="IdMarca" id="IdMarca" class="form-control">
                                        <option value="">Selecionar...</option>
                                        @foreach (var item in ViewBag.Marca)
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    </select>

                                    @Html.LabelFor(model => model.Nome)
                                    @Html.TextAreaFor(model => model.Nome, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Nome)

                                    <br />
                                    <button type="submit" class="btn btn-primary">Enviar</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

<script type="text/javascript" src="/js/ckeditor/ckeditor.js"></script>
<script type="text/javascript" src="/js/bootstrap-wysihtml5/wysihtml5-0.3.0.js"></script>
<script type="text/javascript" src="/js/bootstrap-wysihtml5/bootstrap-wysihtml5.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('.wysihtml5').wysihtml5();
    });
</script>